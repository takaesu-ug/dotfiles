[user]
    name = yusabana
    email = taka.esu.user@gmail.com
[color]
    ui = auto
[alias]
    st = status
    co = checkout
    ci = commit
    br = branch
    lg = log --graph --date=short --pretty=format:'%Cgreen%h %cd %Cblue%cn %Creset%s'
    log-all = log --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset'
    hist = log '--pretty=format:\\\"%h %ad | %s%d [%an]\\\"' --graph --date=short
    svn-ref = "!f() { ret=''; for rev in $@; do ret=${ret}' '`git log --grep "git-svn-id.*@${rev}" --pretty=%H;`; done; echo $ret; }; f"
    svn-br-rm = "~/bin/git-svn-br-rm"
[tig]
    show-refs = yes
    show-line-numbers = yes
    line-number-interval = 1
[tig "color"]
    cursor     = white red underline
    title-blur = white magenta
